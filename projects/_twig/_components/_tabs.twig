{% for item in tabs_items %}
    <li class="list_item{{ item.is_active ? ' is-active' : '' }}{{ item.css_class ? ' ' ~ item.css_class : '' }}{{ item.premium ? ' is-premium' : '' }} tab tab_trigger">
        <div class="tab_container">
            {% if item.img %}
                <img class="tab_img" src="{{ item.img ? item.img : '' }}" alt="">
            {% endif %}
            {% if item.info %}
                <div class="tab_info">
                    {{ item.label }}
                    <span>{{ item.info }}</span>    
                </div>
            {% else %}
                {{ item.label }}
            {% endif %}
        </div>
    </li>
{% endfor %}